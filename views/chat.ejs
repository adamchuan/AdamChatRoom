<%- include header %>

<div id="chatbox" style="min-height:400px;width:600px;border:1px #999 solid">
    

</div>


<script src="/socket.io/socket.io.js"></script>
<script>
    var host = '127.0.0.1';
    var port = 3000;
    var url = 'ws://'+host+':'+port+'/';

    var socket = io.connect(url+"chat_infra");

    socket.on('user_entered', function (message) {

            if (message.type == "serverMessage") {
                $("#chatbox").append(message.message+"<br/>");
            }
        }
    )
</script>
